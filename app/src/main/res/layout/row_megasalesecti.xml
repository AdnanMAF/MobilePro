<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="megasalesectiRowModel" type="com.adnansapplication.app.modules.dashboard.data.model.MegasalesectiRowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearProductitem"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical" style="@style/groupStylewhite_A700cornerRadius">
        <ImageView android:id="@+id/imageProductimageThree"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_109pxh"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="@dimen/_109pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_5pxh}"
            imageRes="@{@drawable/img_productimage_2}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_productimage_2"/>
        <TextView android:gravity="center_horizontal"
            android:id="@+id/txtMSNikeAirM"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_width="match_parent"
            android:letterSpacing="0.03"
            android:text="@{megasalesectiRowModel.txtMSNikeAirM}"
            style="@style/txtPoppinsbold12" tools:text="@string/msg_ms_nike_air_max"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtPriceThree"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_width="wrap_content"
            android:letterSpacing="0.03" android:singleLine="true"
            android:text="@{megasalesectiRowModel.txtPriceThree}"
            style="@style/txtPoppinsbold12_1" tools:text="@string/lbl_299_43"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearDiscount"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtPriceOneThree"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.5" android:layout_width="0dp"
                android:letterSpacing="0.03" android:singleLine="true"
                android:text="@{megasalesectiRowModel.txtPriceOneThree}"
                style="@style/txtPoppinsregular10" tools:text="@string/lbl_534_33"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtOfferFour"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_weight="0.5" android:layout_width="0dp"
                android:letterSpacing="0.03" android:singleLine="true"
                android:text="@{megasalesectiRowModel.txtOfferFour}"
                style="@style/txtPoppinsbold10" tools:text="@string/lbl_24_off"/>
        </LinearLayout>
    </LinearLayout>
</layout>
