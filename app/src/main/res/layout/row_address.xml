<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="addressRowModel" type="com.adnansapplication.app.modules.shipto.data.model.AddressRowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearAddressitem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_1">
        <TextView android:ellipsize="end"
            android:id="@+id/txtPriscekila"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_24pxh"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_22pxv"
            android:layout_width="wrap_content"
            android:letterSpacing="0.03" android:singleLine="true"
            android:text="@{addressRowModel.txtPriscekila}"
            style="@style/txtPoppinsbold14_1" tools:text="@string/lbl_priscekila"/>
        <TextView android:id="@+id/txtAddress"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_24pxh"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_19pxv"
            android:layout_width="match_parent"
            android:letterSpacing="0.03"
            android:text="@{addressRowModel.txtAddress}"
            style="@style/txtPoppinsregular12" tools:text="@string/msg_3711_spring_hill"/>
        <TextView android:ellipsize="end" android:id="@+id/txtMobileNo"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_24pxh"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_width="wrap_content"
            android:letterSpacing="0.03" android:singleLine="true"
            android:text="@{addressRowModel.txtMobileNo}"
            style="@style/txtPoppinsregular12" tools:text="@string/lbl_99_1234567890"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearActions"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_26pxv"
            android:layout_marginEnd="@dimen/_24pxh"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_19pxv"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <TextView android:ellipsize="end" android:id="@+id/txtEdit"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_weight="0.37" android:layout_width="0dp"
                android:letterSpacing="0.03" android:singleLine="true"
                android:text="@{addressRowModel.txtEdit}"
                style="@style/txtPoppinsbold14_2" tools:text="@string/lbl_edit"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtDelete"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.63" android:layout_width="0dp"
                android:letterSpacing="0.03" android:singleLine="true"
                android:text="@{addressRowModel.txtDelete}"
                style="@style/txtPoppinsbold14_4" tools:text="@string/lbl_delete"/>
        </LinearLayout>
    </LinearLayout>
</layout>
